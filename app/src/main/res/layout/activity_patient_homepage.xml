<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0EFFF"
    tools:context=".Patient.PatientHomepage">

    <TextView
        android:id="@+id/patientHeader"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/whiteLogo"
        android:layout_width="233dp"
        android:layout_height="201dp"
        android:paddingTop="125dp"
        android:src="@drawable/whitelogo"
        app:layout_constraintBottom_toBottomOf="@+id/patientHeader"
        app:layout_constraintEnd_toEndOf="@+id/patientHeader"
        app:layout_constraintStart_toStartOf="@+id/patientHeader" />

    <TextView
        android:id="@+id/nameSettings"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="104dp"
        android:background="#F0EFFF"
        android:text="Welcome! You are logged in as Patient"
        android:textAlignment="center"
        android:textColor="#7A73E7"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/patientContinueButton"
        style="@style/AllButtons"
        android:layout_marginStart="116dp"
        android:layout_marginTop="400dp"
        android:layout_marginEnd="108dp"
        android:text="Continue"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>